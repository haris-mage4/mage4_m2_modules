<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
	<tab id="sx_cloudflare" translate="label" sortOrder="10">
	    <label>SX Cloudflare Adapter</label>
	</tab>
	<section id="sx_cloudflare_setting" translate="label" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
	    <label>Skynix Cloudflare Settings</label>
	    <tab>sx_cloudflare</tab>
	    <resource>Skynix_CloudflareSXAdapter::configuration</resource>
	    <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
			<label>Configuration</label>
			<field id="module_enable" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Status Module</label>
				<source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
			</field>
			<field id="api_key" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>API key</label>
			</field>
			<field id="email" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Email</label>
			</field>
	    </group>
	</section>
    </system>
</config>
