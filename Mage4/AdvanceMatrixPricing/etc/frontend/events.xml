<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="checkout_cart_product_add_after">
        <observer name="cart_add" instance="Mage4\AdvanceMatrixPricing\Observer\UpdatePrice\AddToCart" />
    </event>
    <event name="checkout_cart_update_item_complete">
        <observer name="cart_update" instance="Mage4\AdvanceMatrixPricing\Observer\UpdatePrice\UpdateCart" />
    </event>
</config>
